/* form area */
.container{
  padding-bottom: 128rpx;
  position: absolute;
  top:0;
  left:0;
  width: 100%;
  box-sizing: border-box;
  height: 100%;
  overflow: hidden;
}
.form-wrap{
  background-color: #fff;
  padding: 0 30rpx 10rpx;
  box-sizing: border-box;
  height: 100%;
  overflow-y: scroll;
  display: none;
}
.form-wrap.active{
  display: block;
}
.form-title{
 height:80rpx;
 line-height:80rpx;
 text-align:center;
 font-size:32rpx;
 color: #333;
 font-weight:bold;
}
.form-item{
  margin-top: 30rpx;
}
.form-item:last-of-type{
  margin-bottom: 0;
}
.form-label{
  color: #666;
  font-size: 30rpx;
  font-weight: bold;
}
.form-input{
  height: 60rpx;
  border-bottom: 1px solid #eee;
  color: #F5A623;
  font-size: 28rpx;
}
form-input:focus{
  border-bottom: 1px solid #F5A623;
}
.form-date-picker{
  height: 50rpx;
}
.upload-image{
  margin-top:20rpx;
  border:2rpx dashed #ddd;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 4rpx;
  text-align: center;
}
.upload-image text{
  font-size: 12px;
  color: #999;
  margin-left: 10rpx;
}
.upload-icon{
  height: 60rpx;
  width: 60rpx;
  vertical-align: middle;
}
.submit-button{
  position: absolute;
  bottom:20rpx;
  left: 30rpx;
  right: 30rpx;
}
.image-wrap{
  margin-top: 30rpx;
}
.image-item-wrap{
  width: 180rpx;
  height: 160rpx;
  display: inline-block;
  margin-right: 30rpx;
  font-size: 0;
  position: relative;
  margin-bottom: 20rpx;
}
.delete-icon{
  height: 40rpx;
  width: 40rpx;
  position: absolute;
  top:-12rpx;
  right: -12rpx;
}
.image-item{
  height: 100%;
  width: 100%;
}
.tip-wrap{
    position: absolute;
    top:-100rpx;
    background-color: #F5A623;
    width: 80%;
    left:10%;
    right:10%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    transition: top ease 0.2s;
}
.tip-wrap.show{
  top: 0rpx;
  transition: top ease 0.2s;
}
.tip-wrap text{
  display: inline-block;
  height: 80rpx;
  line-height: 80rpx;
  color:#fff;
}

.success-wrap{
  position: absolute;
  top:100%;
  left:0;
  right:0;
  bottom:0;
  background-color: #fff;
  padding-top: 200rpx;
  text-align: center;
  transition: top ease 0.4s;
}
.success-wrap.show{
  top:0;
  transition: top ease 0.2s; 
}
.success-icon{
  height: 200rpx;
  width: 200rpx;
  margin-bottom: 30rpx;
}
.success-wrap text{
  display: block;
  margin-top: 10rpx;
  color: #666;
}
.success-wrap .return-button{
  color: #F5A623;
  margin-top: 40rpx;
  font-size: 32rpx;
  text-decoration: underline;
}
